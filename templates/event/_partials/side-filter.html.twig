<form id="filter-sidebar" class="sidebar z-3" method="GET" action="">
    <div class="close-filter">
        <span class="d-flex gap-3">
          <i class="material-icons text-primary">filter_alt</i>
          <span class="align-self-center fw-bold">{{ 'filter' | trans }}</span>
        </span>
        <i id="close-filter" class="material-icons close-filter-btn">close</i>
    </div>

    <div class="filter-fields">
        <div class="form-group">
            <label for="period" class="filter-label">{{ 'period' | trans }}</label>
            <select class="filter-form mb-3" id="period" name="period">
                <option value="">{{ 'select' | trans }}</option>
                <option value="{{ date()|date('Y-m-d') }},{{ date()|date('Y-m-d') }}">{{ 'today'|trans }}</option>
                <option value="{{ date()|date('Y-m-d') }},{{ date('+30days')|date('Y-m-d') }}">{{ 'next_30_days'|trans }}</option>
                <option class="d-none" data-name="custom" value="">{{ 'customized'|trans }}</option>
            </select>

            <div class="dropdown">
                <button class="btn btn-primary w-100" type="button" id="dropdownMenuButton"
                        data-bs-auto-close="false" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    <i class="material-icons">calendar_month</i>
                    {{ 'show_calendar'|trans }}
                </button>
                <div class="dropdown-menu px-4 pb-3" aria-labelledby="dropdownMenuButton" style="width: fit-content"
                     data-cy="dropdown-calendar">
                    <i id="close-calendar" class="material-icons text-primary position-absolute end-0 top-0 m-1"
                       style="cursor: pointer" data-cy="close-calendar"
                       onclick="this.parentElement.previousElementSibling.click()">close</i>

                    <label class="fw-bold" for="datepicker">{{ 'calendar'|trans }}</label>

                    <div id="datepicker" class="mt-3" style="width: fit-content"></div>
                    <button type="button" class="btn btn-primary mx-auto d-block m-3"
                            id="apply-period-filter">{{ 'apply_filter'|trans }}</button>
                </div>
            </div>
        </div>

        <div class="mb-2">
            <input type="checkbox" id="official-events" name="official-events" value="official-events">
            <label for="official-events" class="fw-bold">{{ 'official_events' | trans }}</label>
        </div>

        <div class="form-group">
            <label for="event-name" class="filter-label">{{ 'name_event' | trans }}</label>
            <input type="text" class="filter-form" id="event-name" name="name" placeholder="">
        </div>

        <div class="form-group">
            <label for="event-language" class="filter-label">{{ 'language' | trans }}</label>
            <select class="filter-form" id="event-language" name="language">
                <option value="">{{ 'select' | trans }}</option>
            </select>
        </div>

        <div class="form-group">
            <label for="age-rating" class="filter-label">{{ 'age_rating' | trans }}</label>
            <select class="filter-form" id="age-rating" name="age-rating">
                <option value="">{{ 'select' | trans }}</option>
            </select>
        </div>

        <div class="form-group">
            <label for="seals" class="filter-label">{{ 'seals' | trans }}</label>
            <select class="filter-form" id="seals" name="seals">
                <option value="">{{ 'select' | trans }}</option>
            </select>
        </div>

        <div class="form-group">
            <label for="state" class="filter-label">{{ 'state' | trans }}</label>
            <select class="filter-form" id="state" name="state">
                <option value="">{{ 'select' | trans }}</option>
            </select>
        </div>

        <div class="form-group">
            <label for="city" class="filter-label">{{ 'city' | trans }}</label>
            <select class="filter-form" id="city" name="city">
                <option value="">{{ 'select' | trans }}</option>
            </select>
        </div>

        <div class="d-flex flex-column gap-2">
            <button id="apply-filters" type="submit"
                    class="btn btn-primary fw-bold py-3">{{ 'apply_filter' | trans }}</button>
            <a href="{{ path("web_event_list") }}"
               class="btn btn-outline-primary py-3 fw-bold">{{ 'clean_filter' | trans }}</a>
        </div>
    </div>
</form>
