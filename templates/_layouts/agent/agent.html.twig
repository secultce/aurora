<!doctype html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">
        <title>{% block title %} {{ 'Home'|trans }} {% endblock %}</title>
        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <header>
        {% block navbar %}{% endblock %}
    </header>
    <section class="agent-panel">
        {% block panel %}{% endblock %}
    </section>

    <section class="wrapper agent-wrapper">
        {% include "admin/agent/_partials/side-filter.html.twig" %}

        <button id="open-filter" class="filter-btn">
            <i class="material-icons">filter_alt</i>
        </button>
        <main id="main-content" class="content-agent">
            {% block content %}{% endblock %}
        </main>
    </section>
    {% include "_components/footer.html.twig" %}
    </body>
</html>
