<div class="d-flex justify-content-between align-items-end">
    <p class="fw-bold">{{ totalOrganizations }} {{ 'view.organization.quantity.total' | trans }}</p>
    <div class="d-flex g-4 agent-sort">
        <label class="agent-options" for="sort-options">{{ 'sort_by' | trans }}</label>
        <select id="sort-options" class="form-select">
            <option value="recent">{{ 'most_recent' | trans }}</option>
            <option value="old">{{ 'oldest' | trans }}</option>
        </select>
    </div>
</div>

{% for organization in organizations %}
    <div class="mw-100 agent-card">
        <div class="agent-card-header">
            <img src="{{ asset('img/home-agents.png') }}" alt="{{ 'photo' | trans }}" class="rounded-circle">
            <div class="d-flex align-items-center gap-2">
                <h5 class="organization-name">{{ organization.name }}</h5>
                <span class="agent-type person">
              <i class="material-icons">corporate_fare</i> {{ 'organization' | trans }}
            </span>
            </div>
        </div>

        <div class="d-flex flex-column gap-2 pt-3">
            <p class="agent-area"><strong>{{ 'areas_of_expertise' | trans}} (1):</strong> <span class="organization-sub-area">DESENVOLVIMENTO</span></p>
            <p class="mx-3"><span class="fw-bold">{{ 'description'|trans }}: </span>{{ organization.description }}</p>
            <div class="d-flex align-items-center gap-2 mx-2">
                <i class="material-icons">calendar_month</i>
                <span class="fw-bold">{{ 'view.organization.date'|trans }}</span> {{ organization.createdAt|date('d/m/Y')}}
            </div>

            <div class="access-profile-container">
                <a href="{{ path("web_organization_getOne", {'id': organization.id }) }}" class="btn btn-primary access-profile">{{ 'access' | trans }}</a>
            </div>
        </div>
    </div>
{% endfor %}

{% if organizations|length > 8 %}
    <div class="container align-items-center mt-5 mb-5">
        <div class="centered-icon-text card-view-more">
            <i class="material-icons">add_circle_outline</i>
            <button class="btn fw-bold">{{ 'see_more' | trans }}</button>
        </div>
    </div>
{% endif %}
