<div class="tab-pane container active" id="generalData">
    {% if opportunity.parent %}
        <div class="card shadow-sm mb-3 card__entity-details">
            <div class="card-body py-4">
                <p class="my-3">
                    {{ 'view.opportunity.linked_parent' | trans }}
                    <a class="text-decoration-none fw-bold" href="{{ path('web_opportunity_show', {id: opportunity.parent.id }) }}">
                        {{ opportunity.parent.name }}
                    </a>.
                </p>
            </div>
        </div>
    {% endif %}

    <div class="card shadow-sm mb-3 card__entity-details">
        <div class="card-body py-4">
            <h5 class="mb-4 fw-bold card-title__entity-details">{{ 'introduction' | trans }}</h5>

            <div class="row">
                <div class="col">
                    <label class="fw-bold mb-2">{{ 'view.opportunity.type_of' | trans }}</label>
                    <p class="text-opportunity">
                        {{ opportunity.extraFields.type ?? 'not_informed' | trans }}
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label class="fw-bold mb-2">{{ 'areas_of_expertise' | trans }}</label>
                    <p>
                        {% for areaOfExpertise in opportunity.extraFields.areasOfActivity %}
                            <span class="text-opportunity">{{ areaOfExpertise }}</span>{{ loop.last ? '' : ',' }}
                        {% else %}
                            {{ 'not_informed' | trans }}
                        {% endfor %}
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label class="fw-bold mb-2">Tags (3) <i class="material-icons text-primary fs-5 align-top">help</i></label>
                    <p>
                        <span class="text-opportunity fw-bold">DESIGN</span>,
                        <span class="text-opportunity fw-bold">ACESSIBILIDADE</span>,
                        <span class="text-opportunity fw-bold">DESIGNINCLUSIVO</span>
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-sm-6">
                    <label class="fw-bold mb-2">{{ 'view.opportunity.period' | trans }}</label>
                    <p>
                        {% if opportunity.extraFields.period is defined %}
                            {{ opportunity.extraFields.period.startDate | default('0') | date('d/m/Y') }} {{ 'to' | trans }} {{ opportunity.extraFields.period.endDate | default('0') | date('d/m/Y') }}
                        {% else %}
                            {{ 'not_informed' | trans }}
                        {% endif %}
                    </p>
                </div>
                <div class="col-12 col-sm-6">
                    <label class="fw-bold mb-2">{{ 'project_value' | trans }}</label>
                    <p>R$ 000.000,00</p>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label class="fw-bold mb-2">{{ 'description' | trans }}</label>
                    <p>
                        {% if opportunity.extraFields.longDescription is defined %}
                            {{ opportunity.extraFields.longDescription }}
                            <span class="text-primary fw-bold d-block">({{ 'see_more' | trans }})</span>
                        {% else %}
                            {{ 'not_informed' | trans }}
                        {% endif %}
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-sm-6">
                    <label class="fw-bold mb-2">Site</label>
                    <p><a class="text-decoration-none fw-bold" href="#" target="_blank">Site da iniciativa</a></p>
                </div>
                <div class="col-12 col-sm-6">
                    <label class="fw-bold mb-2">{{ 'phone' | trans }}</label>
                    <p>(00) 12345-6789</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-3 card__entity-details">
        <div class="card-body py-4">
            <h5 class="mb-4 fw-bold card-title__entity-details">{{ 'social_media' | trans }}</h5>

            <div class="row">
                <div class="col mb-2">
                    <label class="fw-bold mb-2">Instagram</label>
                    <p class="d-flex">
                        <i class="material-icons fs-4 me-1">facebook</i>
                        <span class="align-top fw-bold">
                            <a class="text-decoration-none" href="#" target="_blank">nomedainiciativa</a>
                        </span>
                    </p>
                </div>
                <div class="col mb-2">
                    <label class="fw-bold mb-2">X ({{ 'old' | trans }} Twitter)</label>
                    <p class="d-flex">
                        <i class="material-icons fs-4 me-1">facebook</i>
                        <span class="align-top fw-bold">
                            <a class="text-decoration-none" href="#" target="_blank">nomedainiciativa</a>
                        </span>
                    </p>
                </div>
                <div class="col mb-2">
                    <label class="fw-bold mb-2">Facebook</label>
                    <p class="d-flex">
                        <i class="material-icons fs-4 me-1">facebook</i>
                        <span class="align-top fw-bold">
                            <a class="text-decoration-none" href="#" target="_blank">nomedainiciativa</a>
                        </span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col mb-2">
                    <label class="fw-bold mb-2">Vimeo</label>
                    <p class="d-flex">
                        <i class="material-icons fs-4 me-1">facebook</i>
                        <span class="align-top fw-bold">
                            <a class="text-decoration-none" href="#" target="_blank">nomedainiciativa</a>
                        </span>
                    </p>
                </div>
                <div class="col mb-2">
                    <label class="fw-bold mb-2">YouTube</label>
                    <p class="d-flex">
                        <i class="material-icons fs-4 me-1">facebook</i>
                        <span class="align-top fw-bold">
                            <a class="text-decoration-none" href="#" target="_blank">nomedainiciativa</a>
                        </span>
                    </p>
                </div>
                <div class="col mb-2">
                    <label class="fw-bold mb-2">Linkedin</label>
                    <p class="d-flex">
                        <i class="material-icons fs-4 me-1">facebook</i>
                        <span class="align-top fw-bold">
                            <a class="text-decoration-none" href="#" target="_blank">nomedainiciativa</a>
                        </span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col mb-2">
                    <label class="fw-bold mb-2">Spotify</label>
                    <p class="d-flex">
                        <i class="material-icons fs-4 me-1">facebook</i>
                        <span class="align-top fw-bold">
                            <a class="text-decoration-none" href="#" target="_blank">nomedainiciativa</a>
                        </span>
                    </p>
                </div>
                <div class="col mb-2">
                    <label class="fw-bold mb-2">Pinterest</label>
                    <p class="d-flex">
                        <i class="material-icons fs-4 me-1">facebook</i>
                        <span class="align-top fw-bold">
                            <a class="text-decoration-none" href="#" target="_blank">nomedainiciativa</a>
                        </span>
                    </p>
                </div>
                <div class="col mb-2">
                    <label class="fw-bold mb-2">Tiktok</label>
                    <p class="d-flex m-0">
                        <i class="material-icons fs-4 me-1">facebook</i>
                        <span class="align-top fw-bold">
                            <a class="text-decoration-none" href="#" target="_blank">nomedainiciativa</a>
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-3 card__entity-details">
        <div class="card-body py-4">
            <h5 class="mb-4 fw-bold card-title__entity-details">{{ 'other_information' | trans }}</h5>

            <hr class="mb-4">

            <h6 class="fw-bold mb-4">{{ 'local' | trans }}</h6>
            <span class="d-flex align-items-center fw-bold">
                <div class="rounded-circle card-names-ellipse__entity-details"></div>
                {% if opportunity.space %}
                    <span><a class="text-decoration-none" href="#">{{ opportunity.space.name }}</a></span>
                {% else %}
                    {{ 'not_informed' | trans }}
                {% endif %}
            </span>
        </div>
    </div>

    <div class="clearfix">
        <button data-cy="change-history-btn" type="button" class="btn btn-outline-success fw-bold px-sm-5 py-sm-2 btn-outline__entity-details float-start">
            {{ 'view.entities.change_history'|trans }}
        </button>
        <button data-cy="report-btn" type="button" class="btn btn-outline-success fw-bold px-sm-5 py-sm-2 btn-outline__entity-details float-end">
            {{ 'view.entities.report'|trans }}
        </button>
    </div>
</div>
