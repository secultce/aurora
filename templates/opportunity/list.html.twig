{% extends "_layouts/blank-not-logged.html.twig" %}

{% block title %} {{ 'opportunities'|trans}} {% endblock %}

{% block content %}
    <section class="white-square">
        {% include '_components/breadcrumb.html.twig' with {
            items: [
                {text: 'home'|trans, path: path('web_home_homepage')},
                {text: 'opportunities'|trans, path: path('web_opportunity_list')},
            ]
        } %}

        {% include '_components/title.html.twig' with {title: 'opportunities'|trans} %}

        {% include "_components/entity-dashboard.html.twig" with { 'dashboard': dashboard} %}

        {% include 'opportunity/_partials/tabs/tabs.html.twig' %}
    </section>

    <section class="entity-wrapper">
        {% include "opportunity/_partials/side-filter.html.twig" %}

        <button id="open-filter" class="filter-btn">
            <i class="material-icons">filter_alt</i>
        </button>

        <div class="entity-container">
            {% include 'opportunity/_partials/tabs/content-tabs.html.twig' %}
        </div>
    </section>

{% endblock %}

{% block extra_javascripts %}
    <script type="module" src="{{ asset('js/side-filter.js') }}"></script>
{% endblock %}
