<section class="mt-5 row">
    <span class="fs-4 fw-bold">{{ "recent_registrations" | trans }}</span>

    {% if recentRegistrations|length > 0 %}
        {% for registration in recentRegistrations %}
            <div class="recent-registrations-card mt-3 col mx-2">
                <div class="d-flex">
                    <span class="registration-info">
                        {{ registration.opportunity.name }}
                    </span>
                    <i class="iconify" data-icon="simple-line-icons:star"></i>
                </div>
                <div class="d-flex flex-column">
                    <span class="fw-semibold">{{ "registration_date"| trans | upper }}:</span>
                    <span class="fw-bold">{{ registration.createdAt.format('d/m/Y \\Ã \\s H\\h') }}</span>
                </div>
                <a href="{{ path('web_opportunity_details', {id: registration.opportunity.id}) }}">
                    {{ "accompany" | trans }}
                    <i class="material-icons">keyboard_arrow_right</i>
                </a>
            </div>
        {% endfor %}
    {% else %}
        <div class="mt-3">
            <p>{{ "view.agent_profile.no_registrations_message"|trans }}</p>
            <a href="{{ path('web_opportunity_list') }}" class="btn btn-primary">
                {{ "view.agent_profile.view_opportunities"|trans }}
            </a>
        </div>
    {% endif %}
</section>
