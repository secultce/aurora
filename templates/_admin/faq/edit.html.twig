{% extends "_layouts/blank.html.twig" %}

{% block title %} {{ 'edit_faq'|trans }} {% endblock %}

{% block content %}
    <section class="d-flex">
        {% include "_components/side-bar.html.twig" %}
        <div class="management-content w-100 p-4">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card card-body">
                        <h2>{{ 'edit_faq'|trans }}</h2>
                        {% if errors is defined and errors|length > 0 %}
                            <div class="alert alert-danger">
                                <ul>
                                    {% for error in errors %}
                                        <li>{{ error.message }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                        <form method="POST">
                            <div class="mb-3">
                                <label for="question" class="form-label">{{ 'question'|trans }}</label>
                                <input type="text" id="question" name="question" class="form-control" value="{{ faq.question }}" required>
                            </div>
                            <div class="mb-3">
                                <label for="answer" class="form-label">{{ 'answer'|trans }}</label>
                                <textarea id="answer" name="answer" class="form-control" rows="4" required>{{ faq.answer }}</textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">{{ 'save'|trans }}</button>
                            <a href="{{ path('admin_faq_list') }}" class="btn btn-secondary">{{ 'cancel'|trans }}</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
