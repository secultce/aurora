<div class="tab-pane" id="inscriptions">
    <div class="card card-body shadow">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>{{ 'photo' | trans }}</th>
                    <th>{{ 'name' | trans }}</th>
                    <th>{{ 'created_at' | trans }}</th>
                    <th>{{ 'status' | trans }}</th>
                    <th>{{ 'actions' | trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for item in inscriptions %}
                <tr>
                    <td><img src="{{ asset(item.agent.image ?? 'img/allan.png') }}" alt="{{ 'agent-picture'|trans }}" class="profile-picture"></td>
                    <td>{{ item.agent.name }}</td>
                    <td>{{ item.createdAt.format('d/m/Y H:i:s') }}</td>
                    <td>{{ item.status ? 'view.opportunity_admin.inscriptions.status.active'|trans : 'view.opportunity_admin.inscriptions.status.inactive'|trans }}</td>
                    <td>
                        <a href="{{ path('admin_registration_get', {id: item.id}) }}" class="btn btn-outline-info btn-sm">{{ 'view.opportunity_admin.inscriptions.see_inscription' | trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
