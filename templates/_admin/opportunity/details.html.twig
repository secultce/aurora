{% extends "_layouts/blank.html.twig" %}

{% block title %} {{ 'control_panel'|trans }} - {{ 'opportunity'|trans }} | {{ opportunity.name }} {% endblock %}

{% block content %}
    <section class="d-flex">
        {% include "_components/side-bar.html.twig" %}

        <div class="management-content w-100 p-4">
            <div class="row">
                <div class="col-12">
                    <div class="card card-body mb-3">
                        <h2>{{ opportunity.name }}</h2>
                    </div>
                    <div class="card card-body">
                        <h3>{{ 'view.opportunity_admin.inscriptions.section' | trans }}</h3>

                        <hr>

                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>{{ 'photo' | trans }}</th>
                                    <th>{{ 'name' | trans }}</th>
                                    <th>{{ 'created_at' | trans }}</th>
                                    <th>{{ 'status' | trans }}</th>
                                    <th>{{ 'actions' | trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for item in inscriptions %}
                                <tr>
                                    <td><img src="{{ asset(item.agent.image ?? 'img/allan.png') }}" alt="{{ 'agent-picture'|trans }}" class="profile-picture"></td>
                                    <td>{{ item.agent.name }}</td>
                                    <td>{{ item.createdAt.format('d/m/Y H:i:s') }}</td>
                                    <td>{{ item.status ? 'view.opportunity_admin.inscriptions.status.active'|trans : 'view.opportunity_admin.inscriptions.status.inactive'|trans }}</td>
                                    <td>
                                        <a href="#" class="btn btn-outline-info btn-sm">{{ 'view.opportunity_admin.inscriptions.see_inscription' | trans }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
