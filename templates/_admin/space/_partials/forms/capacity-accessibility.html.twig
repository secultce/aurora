<div class="entity-accessibility">
    <div class="row mb-3">
        <div class="col-md-4">
            <label class="form-label" for="people_capacity">{{ 'people_capacity' | trans }}</label>
            <input
                    id="people_capacity"
                    type="text"
                    class="form-control"
                    placeholder="{{ 'type_here' | trans }}"
            >
        </div>
    </div>

    <div class="d-flex flex-column">
        <label class="form-label">
            {{ 'architectural_accessibility'| trans }}
            <span class="architectural">({{ 'architectural' | trans }})</span>?
            <span
                    class="iconify entity-edit-icon me-2"
                    data-icon="material-symbols:info-rounded"
            ></span>
        </label>
        <div class="d-flex gap-5">
            <div class="form-check">
                <input
                        class="form-check-input"
                        type="radio"
                        name="architectural_accessibility_option"
                        id="yes"
                >
                <label class="form-check-label" for="yes">
                    {{ 'yes' | trans }}
                </label>
            </div>
            <div class="form-check">
                <input
                        class="form-check-input"
                        type="radio"
                        name="architectural_accessibility_option"
                        id="no"
                        checked
                >
                <label class="form-check-label" for="no">
                    {{ 'no' | trans }}
                </label>
            </div>
        </div>
    </div>

    <div id="architecturalSection" class="row mb-3 d-none">
        <div class="col">
            <label for="physical_accessibility" class="form-label">
                {{ 'physical_accessibility' | trans }}
                <span class="architectural required">{{ 'architectural' | trans}}</span>
            </label>
            <select
                    id="physical_accessibility"
                    name="architectural_accessibility[]"
                    multiple
            >
                {% for item in accessibilities %}
                <option value="{{ item.id }}">{{ item.name }}</option>
                {% endfor %}

            </select>
        </div>
    </div>
</div>
