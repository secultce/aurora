                    <p class="lead mt-3">{{ 'homepage.cultural_scene'|trans }}</p>
                </div>

                <div class="mt-4">
                    <button id="btn-carousel-homepage" class="btn btn-light text-primary rounded-circle me-2" type="button" data-bs-target="#opportunitiesCarousel" data-bs-slide="prev">
                        <i class="material-icons">chevron_left</i>
                    </button>
                    <button id="btn-carousel-homepage" class="btn btn-light text-primary rounded-circle" type="button" data-bs-target="#opportunitiesCarousel" data-bs-slide="next">
