{% extends "_layouts/blank-not-logged.html.twig" %}

{% block title %} {{ 'Home'|trans}} {% endblock %}

{% block content %}
<div class="bg-primary">
    <div class="container">
        <div class="row align-items-center justify-content-center p-3">
            <div class="col-md-5 text-white ">
                <h1><strong>{{ 'homepage.welcome_mapas.title'|trans }}</strong></h1>
                <p class="lead mt-5">{{ 'homepage.welcome_mapas.subtitle'|trans }}</p>
            </div>
            <div class="col-md-7 mt-4">
                <img src="{{ asset('img/pessoas-home.png') }}" alt="Ilustração" class="img-fluid">
            </div>
        </div>
    </div>
</div>
<div class=" bg-green text-white py-5">
    <div class="container pb-5">
        <div class="row text-start">
            <div class="col-md-auto">
                <h1 class="fw-bold mt-4">{{ 'homepage.create_account'|trans }}</h1>
                <p class="lead mt-3">{{ 'homepage.registration_info'|trans }}</p>
                <a href="{{ path('admin_auth_register') }}" class="col-5 mx-auto btn btn-light btn-lg text-green icon-link justify-content-between mt-5">
                    <h4 class="fw-bold mt-2">{{ 'homepage.sign_up'|trans }}</h4>
                    <span class="material-icons fs-2">arrow_forward</span>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="bg-rose text-dark py-5">
    <div class="container pb-5">
        <div class="row text-start">
            <div class="col-md-12 d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="fw-bold mt-4">{{ 'homepage.check_opportunities'|trans }}</h1>
                    <p class="lead mt-3">{{ 'homepage.discover_open_notice'|trans }}</p>
                </div>

                <div class="mt-4">
                    <button id="btn-carousel-homepage" class="btn btn-light text-primary rounded-circle me-2" type="button" data-bs-target="#opportunitiesCarousel" data-bs-slide="prev">
                        <i class="material-icons">chevron_left</i>
                    </button>
                    <button id="btn-carousel-homepage" class="btn btn-light text-primary" style="border-radius: 80%" type="button" data-bs-target="#opportunitiesCarousel" data-bs-slide="next">
                        <i class="material-icons">chevron_right</i>
                    </button>
                </div>
            </div>

            <div class="d-flex justify-content-center align-items-center mt-4">
                <div class="d-flex align-items-center">
                    <div class="input-group me-3">
                        <input type="text" class="form-control border-0 rounded-start-pill" placeholder="Buscar" aria-label="Buscar">
                        <div class="input-group-append">
                            <button class="btn bg-white text-dark border-0 rounded-end-pill">
                                <i class="material-icons">search</i>
                            </button>
                        </div>
                    </div>
                    <button class="btn btn-light text-primary d-flex align-items-center me-3 rounded-pill">
                        <i class="material-icons me-1">filter_alt</i> Filtrar
                    </button>
                </div>
            </div>

            {% include "_components/oportunity-card-home.html.twig" with {
                'status_icon': 'check_circle',
                'status_text': 'Inscrições abertas',
                'image_url': asset('img/img.png'),
                'image_alt': 'Mostra de Cinema Independente',
                'title': 'Mostra de Cinema Independente - Edição 2024',
                'registration_period': 'Inscrições de 15/09/2024 até 30/09/2024 às 18:00',
                'description': 'Uma vitrine para cineastas independentes exibirem seus filmes e documentários. O evento contará com debates, workshops e prêmios para as melhores produções.',
                'interest_areas_count': 2,
                'interest_areas': 'Cinema, Produção Independente',
                'tags_count': 3,
                'tags': 'Cinema, Independente, Mostra 2024',
                'badges_count': 1,
                'badges': '+1',
                'link_url': 'https://exemplo.com/mostra-cinema-2024',
            } %}
        </div>

        <div id="opportunitiesCarousel" class="carousel slide" data-bs-ride="carousel">

        </div>

    </div>
</div>

<div class=" py-5">
    <div class="container pb-5">
        <div class="row text-start">
            <h1 class="fw-bold mt-4 text-dark">{{ 'homepage.formed_by_entities'|trans }}</h1>
            {% include "_components/intro-card.html.twig" with {
                'urlImg': asset('img/home-opportunities.png'),
                'entity': 'opportunities'|trans,
                'entityColor': 'var(--navlink-opportunity)',
                'textEntity': 'homepage.register_access'|trans
            } %}
            {% include "_components/intro-card.html.twig" with {
                'urlImg': asset('img/home-events.png'),
                'entity': 'events'|trans,
                'entityColor': 'var(--navlink-event)',
                'textEntity': 'homepage.search_calendar'|trans
            } %}
            {% include "_components/intro-card.html.twig" with {
                'urlImg': asset('img/home-spaces.png'),
                'entity': 'spaces'|trans,
                'entityColor': 'var(--navlink-space)',
                'textEntity': 'homepage.discover_places'|trans
            } %}
            {% include "_components/intro-card.html.twig" with {
                'urlImg': asset('img/home-agents.png'),
                'entity': 'agents'|trans,
                'entityColor': 'var(--navlink-agent)',
                'textEntity': 'homepage.register_artists'|trans
            } %}
            {% include "_components/intro-card.html.twig" with {
                'urlImg': asset('img/home-projects.png'),
                'entity': 'initiatives'|trans,
                'entityColor': 'var(--navlink-project)',
                'textEntity': 'homepage.find_initiatives'|trans
            } %}
        </div>
    </div>
</div>

