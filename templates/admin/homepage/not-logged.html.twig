    <div class="container pb-5">
        <div class="text-center">
            <div class="col-md-auto">
                <span class="material-icons fw-bold fs-1 mt-2">code</span>
                <h1 class="fw-bold mt-2">{{ 'homepage.free_software_info'|trans }}</h1>
                <p class="lead mt-4">{{ 'homepage.api_info'|trans }}</p>
                <a href="https://github.com/secultce/aurora" target="_blank" class="centered-icon-text nav-link text-moss mt-4">
