<div class="item-card-home bg-white p-4 rounded shadow-sm mt-4">
    <div class="row align-items-center mt-3">
        <div class="col-md-3">
            <img src="{{ image_url|default(asset('img/default-image.png')) }}" alt="{{ image_alt|default('event.image'|trans) }}" class="rounded-circle img-fluid profile-image">
        </div>
        <div class="col-md-9 position-relative">
            <div class="d-flex align-items-center justify-content-end">
                <i class="material-icons text-success">{{ status_icon|default('check_circle') }}</i>
                <span>{{ 'events'|trans }}</span>
            </div>
        </div>
    </div>

    <div class="row align-items-start mt-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-start">
                <h4 class="fw-bold">
                    {{ title|default('event.title'|trans) }}
                </h4>
            </div>
        </div>
    </div>

    <div class="row align-items-start mt-3">
        <div class="col-md-12">
            <div class="d-flex align-items-center">
                <i class="material-icons text-success">today</i>
                <span>{{ date }}</span>
            </div>
        </div>
    </div>

    <div class="row align-items-start mt-3">
        <div class="col-md-12">
            <div class="d-flex align-items-center">
                <i class="material-icons text-success">location_on</i>
                <span>{{ location }}</span>
            </div>
        </div>
    </div>

    <h6 class="fw-bold mt-4">{{ 'areas_of_interest'|trans }}:</h6>
    <p><span class="text-info fw-bold">{{ interest_areas|default('none_area_specified'|trans) }}</span></p>

    <div class="row mt-3">
        <div class="col-md position-relative">
            <a href="{{ path('admin_event_event') }}" class="btn btn-primary d-flex align-items-center justify-content-center">
                <span class="fw-bold">{{ 'check'|trans }}</span>
                <i class="material-icons ms-3">arrow_forward</i>
            </a>
        </div>
    </div>
</div>