<div class="item-card-home bg-white p-4 rounded shadow-sm mt-4">
    <div class="row align-items-center mt-3">
        <div class="col-md-3">
            <img src="{{ image_url|default(asset('img/default-image.png')) }}" alt="{{ image_alt|default('agent.image'|trans) }}" class="rounded-circle img-fluid profile-image">
        </div>
        <div class="col-md-9 position-relative">
            <div class="d-flex align-items-center justify-content-end">
                <i class="material-icons text-success">{{ status_icon|default('check_circle') }}</i>
                <span>{{ 'view.agent.individual_agents'|trans }}</span>
            </div>
        </div>
    </div>

    <div class="row align-items-start mt-3">
        <div class="d-flex justify-content-between align-items-start">
            <h4 class="fw-bold">
                {{ name|default('agents'|trans) }}
            </h4>
        </div>
    </div>

    <p class="text-bold fw-bold mt-4">{{ agent.shortBio|default('agent.short_bio'|trans) }}</p>
    <p class="text-muted">{{ agent.longBio|default('agent.long_bio'|trans) }}</p>

    <h6 class="fw-bold mt-4">{{ 'view.agent.areas_of_expertise'|trans }} ({{ areas_of_expertise_count|default(0) }}):</h6>
    <p><span class="text-danger fw-bold">{{ areas_of_expertise|default('none_area_specified'|trans) }}</span></p>

    <h6 class="fw-bold">{{ 'seals'|trans }} ({{ seals_count|default(0) }}):</h6>
    <div class="d-flex">
        <div class="badge bg-secondary text-white rounded-pill px-2 py-1">{{ seals|default('+0') }}</div>
    </div>

    <div class="row mt-3">
        <div class="col-md position-relative">
            <a href="{{ path('admin_agent_agent') }}" class="btn btn-primary d-flex align-items-center justify-content-center">
                <span class="fw-bold">{{ 'check'|trans }}</span>
                <i class="material-icons ms-3">arrow_forward</i>
            </a>
        </div>
    </div>
</div>