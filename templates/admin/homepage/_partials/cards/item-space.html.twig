<div class="item-card-home bg-white p-4 rounded shadow-sm mt-4">
    <div class="row align-items-center">
        <div class="col-md-3">
            <img src="{{ image_url|default(asset('img/default-image.png')) }}" alt="{{ image_alt|default('space.image'|trans) }}" class="rounded-circle img-fluid profile-image">
        </div>
        <div class="col-md-9 position-relative">
            <div class="d-flex align-items-center justify-content-end">
                <i class="material-icons text-success">{{ status_icon|default('public') }}</i>
                <span>{{ 'spaces'|trans }}</span>
            </div>
        </div>
    </div>

    <div class="row align-items-start mt-1">
        <div class="d-flex justify-content-between align-items-start">
            <h4 class="fw-bold">
                {{ title|default('space.title'|trans) }}
            </h4>
        </div>
    </div>

    <p><span class="text-uppercase">{{ 'type'|trans }}:</span> <span class="text-green">{{ type }}</span></p>
    <p><span class="text-uppercase">{{ 'where'|trans }}:</span> <span class="text-info">{{ location }}</span></p>

    <p>{{ description|default('description') }}</p>

    <h6 class="fw-bold">{{ 'tags'|trans }} ({{ tags_count|default(0) }}):</h6>
    <p class="fw-bold text-info">{{ tags }}</p>

    <h6 class="fw-bold">{{ 'seals'|trans }} ({{ seals_count|default(0) }}):</h6>
    <div class="d-flex">
        <div class="badge bg-secondary text-white rounded-pill px-2 py-1">{{ seals|default('+0') }}</div>
    </div>

    <div class="row mt-3">
        <div class="col-md position-relative">
            <a href="{{ link_url|default('#') }}" class="btn btn-primary d-flex align-items-center justify-content-center">
                <span class="fw-bold">{{ 'check'|trans }}</span>
                <i class="material-icons ms-3">arrow_forward</i>
            </a>
        </div>
    </div>
</div>