<form id="filter-sidebar" class="sidebar" method="GET" action="">
    <div class="close-filter">
        <span class="d-flex gap-3">
          <i class="material-icons text-primary">filter_alt</i>
          <span class="align-self-center fw-bold">Filtros</span>
        </span>
        <i id="close-filter" class="material-icons close-filter-btn">close</i>
    </div>

    <div class="filter-fields">

        <div class="form-group">
            <label for="initiative-name" class="filter-label">Nome da iniciativa</label>
            <input type="text" class="filter-form" id="initiative-name" name="name" placeholder="Digite o nome da iniciativa">
        </div>

        <div class="form-group">
            <label for="type" class="filter-label">Tipo da iniciativa</label>
            <select class="filter-form" id="type" name="type">
                <option value="">Selecione</option>
            </select>
        </div>

        <div class="form-group">
            <label for="status" class="filter-label">Status</label>
            <select class="filter-form" id="status" name="status">
                <option value="">Selecione</option>
                <option value="todos">Todos</option>
                <option value="finalizados">Finalizados</option>
                <option value="em-andamento">Em andamento</option>
            </select>
        </div>

        <div class="form-group">
            <label for="seals" class="filter-label">Selos</label>
            <select class="filter-form" id="seals" name="seals">
                <option value="">Selecione</option>
            </select>
        </div>

        <div class="form-group">
            <label for="state" class="filter-label">Estado</label>
            <select class="filter-form" id="state" name="state">
                <option value="">Selecione</option>
            </select>
        </div>

        <div class="form-group">
            <label for="city" class="filter-label">Munic√≠pio</label>
            <select class="filter-form" id="city" name="city">
                <option value="">Selecione</option>
            </select>
        </div>

        <div class="d-flex flex-column gap-2">
            <button id="apply-filters" type="submit" class="btn btn-primary fw-bold py-3">Aplicar Filtros</button>
            <a href="{{ path("web_initiative_list") }}" class="btn btn-outline-primary py-3 fw-bold">Limpar todos os filtros</a>
        </div>
    </div>
</form>
