<div class="bg-white custom-card p-4 rounded shadow-sm mt-4">
    <div class="col-md position-relative">
        <span class="fw-bold fs-6 align-items-end centered-icon-text text-dark  justify-content-end">
            <i class="material-icons text-success">{{ status_icon|default('check_circle') }}</i>
            {{ status_text|default('Inscrições abertas') }}
        </span>
    </div>
    <div class="row align-items-start mt-3">
        <div class="col-md-1">
            <img src="{{ image_url|default(asset('img/default-image.png')) }}" alt="{{ image_alt|default('Imagem') }}" class="rounded-circle img-fluid">
        </div>
        <div class="col-md-11">
            <div class="d-flex justify-content-between align-items-start">
                <h4 class="fw-bold">
                    {{ title|default('Título do Evento') }}
                </h4>
            </div>
        </div>
    </div>
    <p class="text-danger fw-bold mt-4">{{ registration_period|default('Inscrições de 01/01/2024 até 31/01/2024 às 12:00') }}</p>
    <p class="text-muted">{{ description|default('Descrição do evento ou oportunidade aqui.') }}</p>
    <h6 class="fw-bold mt-4">{{ 'ÁREAS DE INTERESSE'|trans }} ({{ interest_areas_count|default(0) }}):</h6>
    <p><span class="text-danger fw-bold">{{ interest_areas|default('Nenhuma área especificada') }}</span></p>
    <h6 class="fw-bold">{{ 'TAGS'|trans }} ({{ tags_count|default(0) }}):</h6>
    <p class="text-danger fw-bold">{{ tags|default('Nenhuma tag especificada') }}</p>
    <h6 class="fw-bold">{{ 'SELOS'|trans }} ({{ badges_count|default(0) }}):</h6>
    <div class="d-flex">
        <div class="badge bg-secondary text-white rounded-pill px-2 py-1">{{ badges|default('+0') }}</div>
    </div>
    <div class="col-md position-relative">
        <a href="{{ link_url|default('#') }}" class="btn btn-primary mt-3 d-flex">
            <span class="fw-bold">{{ 'check'|trans }}</span>
            <i class="material-icons ms-3">arrow_forward</i>
        </a>
    </div>
</div>
