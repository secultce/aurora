<div class="item-card-home bg-white p-4 rounded shadow-sm mt-4">
    <div class="col-md position-relative">
        <span class="fw-bold fs-6 align-items-end centered-icon-text text-dark  justify-content-end">
            <i class="material-icons text-success">{{ status_icon|default('check_circle') }}</i>
            {{ status_text|default('Inscrições abertas') }}
        </span>
    </div>
    <div class="row align-items-start mt-3">
        <div class="col-md-3">
            <img src="{{ image_url|default(asset('img/default-image.png')) }}" alt="{{ image_alt|default('opportunity.image'|trans) }}" class="rounded-circle img-fluid profile-image">
        </div>
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-start">
                <h4 class="fw-bold">
                    {{ title|default('opportunity.title'|trans) }}
                </h4>
            </div>
        </div>
    </div>
    <p class="text-danger fw-bold mt-4">{{ registration_period|default('opportunity.registration_period'|trans) }}</p>
    <p class="text-muted">{{ description|default('opportunity.description'|trans) }}</p>
    <h6 class="fw-bold mt-4">{{ 'ÁREAS DE INTERESSE'|trans }} ({{ interest_areas_count|default(0) }}):</h6>
    <p><span class="text-danger fw-bold">{{ interest_areas|default('No area specified') }}</span></p>
    <h6 class="fw-bold">{{ 'TAGS'|trans }} ({{ tags_count|default(0) }}):</h6>
    <p class="text-danger fw-bold">{{ tags|default('No tag specified') }}</p>
    <h6 class="fw-bold">{{ 'SELOS'|trans }} ({{ badges_count|default(0) }}):</h6>
    <div class="d-flex">
        <div class="badge bg-secondary text-white rounded-pill px-2 py-1">{{ badges|default('+0') }}</div>
    </div>
    <div class="col-md mt-2">
        <a href="{{ link_url|default('#') }}" class="btn btn-primary d-flex">
            <span class="fw-bold">{{ 'check'|trans }}</span>
            <i class="material-icons ms-3">arrow_forward</i>
        </a>
    </div>
</div>