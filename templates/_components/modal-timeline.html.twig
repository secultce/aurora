<div class="modal fade" id="modal-timeline" tabindex="-1" aria-labelledby="modal-timeline-label" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-timeline">{{ "change_details" | trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="modal-timeline-extra-info" class="mb-4">
                    <div class="card mb-3" id="extra-info-card">
                        <div class="row">
                            <div class="col">
                                <div class="card-body">
                                    <h5 class="card-title" id="author-name"></h5>
                                    <p class="card-text">
                                        <strong>{{ "email" | trans }}</strong> <span id="author-email"></span><br>
                                        <strong>{{ "device" | trans }}:</strong> <span id="device"></span> (<span id="platform"></span>)<br>
                                        <strong>{{ "date" | trans }}:</strong> <span id="datetime"></span><br>
                                    </p>
                                    <p class="alert alert-warning"><small class="text-muted" id="title"></small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-info" role="alert" id="alert-info">
                        <strong>{{ "modified_by" | trans }}:</strong> <span id="alert-author-name"></span>
                    </div>
                </div>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>{{ "field" | trans }}</th>
                        <th>{{ "from" | trans }}</th>
                        <th>{{ "from_to" | trans }}</th>
                    </tr>
                    </thead>
                    <tbody id="modal-timeline-table-body"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ "close" | trans }}</button>
            </div>
        </div>
    </div>
</div>
